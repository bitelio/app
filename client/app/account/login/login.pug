.container.center
  .row
    .col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          h4.text-center.bitelio bitelio

        form.form(name='form', ng-submit='vm.login(form)')
          .panel-body
            .form-group.has-error
              p.help-block(ng-show='form.username.$error.required && form.password.$error.required && vm.submitted')
                | Please enter your username and password.
              .alert.alert-danger.text-center(role="alert" ng-show="vm.errors.login") {{ vm.errors.login }}

            .form-group
              input.form-control(type='email', name='username', placeholder='username', ng-model='vm.user.username' required)
            .form-group
              input.form-control(type='password', name='password', placeholder='password', ng-model='vm.user.password' required)

          .panel-footer
            div
              button.btn.btn-primary.pull-right(type='submit')
                | Login
            .clearfix
