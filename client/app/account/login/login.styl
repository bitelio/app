#login
  display table
  position absolute
  height 100%
  width 100%

  .cell
    display table-cell
    vertical-align middle

  .panel
    margin-left auto
    margin-right auto
    width 350px
    &.animate
      animation fadeIn 0.8s ease-out

  .bitelio > a
    color black
    text-decoration none

  .panel-body
    padding-top 30px

  .fa-question
    color #888

  h3
    margin 10px


@keyframes fadeIn
  from
    margin-top 100px
    opacity 0

  to
    margin-top 0px
    opacity 1
